<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Kitchen Orders | Kitchen</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
  <style>
    body {
      background-color: #f4f7fb;
      font-family: 'Segoe UI', sans-serif;
    }

    .sidebar {
      height: 100vh;
      position: fixed;
      top: 0;
      left: 0;
      width: 250px;
      background: linear-gradient(145deg, #102d52, #1d3c5a);
      color: white;
      padding-top: 30px;
      overflow-y: auto;
      box-shadow: 4px 0px 10px rgba(0, 0, 0, 0.15);
    }

    .sidebar h3 {
      text-align: center;
      font-size: 28px;
      font-weight: 700;
      margin-bottom: 30px;
      color: #fff;
    }

    .sidebar a {
      color: #ffffff;
      text-decoration: none;
      padding: 12px 20px;
      display: block;
      border-radius: 30px;
      font-size: 16px;
      margin: 8px 18px;
      transition: all 0.3s ease;
    }

    .sidebar a:hover {
      background-color: rgba(255, 255, 255, 0.15);
      transform: translateX(8px);
    }

    .sidebar a.active {
      background-color: #0d6efd;
      font-weight: 600;
    }

    .sidebar .logout {
      position: absolute;
      bottom: 20px;
      left: 50%;
      transform: translateX(-50%);
      width: 150px;
      text-align: center;
    }

    .content {
      margin-left: 270px;
      padding: 30px;
    }

    .order-card {
      border-radius: 12px;
      background-color: #fff;
      box-shadow: 0 3px 8px rgba(0, 0, 0, 0.15);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      overflow: hidden;
    }

    .order-card.processing {
      border-top: 6px solid #0d6efd;
    }

    .order-card:hover {
      transform: scale(1.02);
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
    }

    .product-img {
      width: 60px;
      height: 60px;
      object-fit: cover;
      border-radius: 8px;
      margin-right: 8px;
    }

    .badge {
      font-size: 0.85rem;
      padding: 6px 12px;
    }

    .product-list {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
    }

    .product-item {
      display: flex;
      align-items: center;
      width: 100%;
      background-color: #f8f9fa;
      border-radius: 10px;
      padding: 5px 8px;
    }

    .product-name {
      font-size: 0.9rem;
      font-weight: 600;
    }
  </style>

  <script>
    setInterval(() => {
      location.reload();
    }, 5000);

    function updatePHTime() {
      const options = {
        timeZone: 'Asia/Manila',
        hour: '2-digit',
        minute: '2-digit',
        second: '2-digit'
      };
      const now = new Date().toLocaleTimeString('en-PH', options);
      const clock = document.getElementById('ph-time');
      if (clock) clock.textContent = now;
    }

    setInterval(updatePHTime, 1000);
    window.onload = updatePHTime;
  </script>
</head>

<body>
  <div class="sidebar">
    <div class="d-flex justify-content-center mb-3">
      <img src="/images/zicon.jpg" style="width: 75px" class="rounded-circle" alt="Logo" />
    </div>
    <h3>Kitchen Panel</h3>
    <a href="/kitchen/index"><i class="bi bi-house-door"></i> Dashboard</a>
    <a href="/kitchen/orders" class="active"><i class="bi bi-file-earmark-text"></i> Orders</a>
    <div class="logout">
      <a href="/logout" class="btn btn-danger btn-sm mx-auto">
        <i class="bi bi-box-arrow-right"></i> Logout
      </a>
    </div>
  </div>

  <div class="content">
    <h2 class="mb-2 fw-bold text-center">Processing Orders</h2>

    <div class="row g-4">
      <% 
        if (processingOrders.length > 0) { 
          processingOrders.forEach((order, index) => { 
      %>
        <div class="col-md-4">
          <div class="order-card p-3 processing" id="order-<%= order._id %>">
            <div class="d-flex justify-content-between align-items-center mb-2">
              <h6 class="fw-bold mb-0">Order #<%= index + 1 %></h6>
              <span class="badge bg-primary">Processing</span>
            </div>

            <div class="product-list mb-2">
              <% order.items.forEach(item => { if (item.productId) { %>
                <div class="product-item d-flex align-items-center mb-2">
                  <img 
                    src="<%= item.productId.productImage %>" 
                    class="product-img me-2" 
                    alt="<%= item.productId.name %>" 
                  >
                  <span class="product-name"><%= item.productId.productName %> (x<%= item.quantity %>)</span>
                </div>
              <% } }) %>
            </div>

            <p class="text-muted mb-1" style="font-size: 0.85rem;">
              <i class="bi bi-clock"></i> 
              <%= order.createdAt.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %>
            </p>
          </div>
        </div>
      <% }) } else { %>
        <p class="text-center text-muted">No processing orders at the moment.</p>
      <% } %>
    </div>
  </div>
</body>
</html>
