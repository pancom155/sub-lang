<!DOCTYPE html> 
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Staff Orders | Zero Degree Café</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    body { background-color: #f4f7fa; }
    .sidebar { height: 100vh; position: fixed; top: 0; left: 0; width: 250px; background: linear-gradient(145deg, #1d3c5a, #3a5f7d); color: white; padding-top: 30px; overflow-y: auto; }
    .sidebar h3 { text-align: center; font-size: 30px; font-weight: bold; margin-bottom: 30px; }
    .sidebar a { color: white; text-decoration: none; padding: 12px 20px; display: block; border-radius: 25px; font-size: 18px; margin: 10px 0; transition: all 0.3s ease; }
    .sidebar a:hover { background-color: #f1f1f1; color: #1d3c5a; transform: translateX(10px); }
    .sidebar a.active { background-color: #3a5f7d; }
    .sidebar .logout { position: absolute; bottom: 20px; width: 100%; text-align: center; }
    .content { margin-left: 270px; padding: 20px; }
    .table { border: none; }
    .table thead { background: linear-gradient(145deg, #1d3c5a, #3a5f7d); color: white; border: none; }
    .table th, .table td { border: none; vertical-align: middle; }
    .table-striped > tbody > tr:nth-of-type(odd) { background-color: #2b4c6f; color: white; }
    .table-striped > tbody > tr:nth-of-type(even) { background-color: #375f85; color: white; }
    .table-hover tbody tr:hover { background-color: #4c7aa8; }
    .table-responsive { border-radius: 10px; overflow: hidden; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08); }
  </style>
</head>
<body>

<div class="sidebar">
  <div class="d-flex justify-content-center mb-3">
    <img src="/images/zicon.jpg" style="width: 75px;" class="rounded-circle" alt="Logo">
  </div>
  <h3>Staff Panel</h3>
  <a href="/staff/index"><i class="bi bi-house-door"></i> Dashboard</a>
  <a href="/staff/orders" class="active"><i class="bi bi-file-earmark-text"></i> Orders</a>
  <a href="/staff/void"><i class="bi bi-x-circle"></i> Cancellation Requests</a>
  <div class="logout d-flex justify-content-center">
    <a href="/logout" class="btn btn-danger" style="width: 150px;"><i class="bi bi-box-arrow-right"></i> Logout</a>
  </div>
</div>

<div class="content">
  <h1 class="fw-bold mb-4">Recent Orders</h1>

  <div class="card shadow-lg border-0 mb-4">
    <div class="card-header bg-dark text-white">
      <i class="bi bi-receipt-cutoff me-2"></i> Pending & Processing Orders
    </div>
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover table-striped align-middle mb-0">
          <thead class="text-center">
            <tr>
              <th>Order ID</th>
              <th>Customer</th>
              <th>Status</th>
              <th>Payment</th>
              <th>Items</th>
              <th>Total</th>
              <th>Placed</th>
              <th>Note</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody class="text-center">
            <% if (orders && orders.length > 0) { %>
              <% orders.forEach((order, index) => { %>
                <tr>
                  <td><span class="text-dark"><%= index + 1 %></span></td>
                  <td><%= order.userInfoSnapshot?.firstName || 'N/A' %> <%= order.userInfoSnapshot?.lastName || '' %></td>
                  <td>
                    <span class="badge <%= order.status === 'Pending' ? 'bg-warning text-dark' : 'bg-info' %>">
                      <%= order.status %>
                    </span>
                  </td>
                  <td>
                    <span class="badge bg-dark"><%= order.paymentMode %></span>
                    <% if ((order.paymentMode === 'Pickup' || order.paymentMode === 'GCash') && order.proofImage) { %>
                      <button class="btn btn-sm btn-outline-dark ms-2" data-bs-toggle="modal" data-bs-target="#proofModal-<%= order._id %>">
                        View Proof
                      </button>
                    <% } %>
                  </td>
                  <td>
                    <% if (order.items && order.items.length > 0) { %>
                      <ul class="list-unstyled mb-0">
                        <% order.items.forEach(item => { %>
                          <li class="d-flex align-items-center mb-1">
                            <img src="<%= item.productId?.productImage || '/images/no-image.jpg' %>" class="me-2 rounded" style="width:35px;height:35px;object-fit:cover;">
                            <span><%= item.productId?.productName || 'Unknown' %> (x<%= item.quantity %>)</span>
                          </li>
                        <% }) %>
                      </ul>
                    <% } else { %>
                      <span class="text-muted">No items</span>
                    <% } %>
                  </td>
                  <td>₱<%= order.totalAmount.toFixed(2) %></td>
                  <td><%= new Date(order.createdAt).toLocaleString('en-PH', { 
                    timeZone: 'Asia/Manila', 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric', 
                    hour: '2-digit', 
                    minute: '2-digit', 
                    hour12: true 
                  }) %></td>
                  <td class="text-muted"><%= order.noteToCashier || 'None' %></td>
                  <td>
                    <% if (order.status === 'Pending') { %>
                      <a href="#" onclick="confirmAction('/staff/orders/<%= order._id %>/process','process')" class="btn btn-success btn-sm">Process</a>
                      <a href="#" onclick="confirmAction('/staff/orders/<%= order._id %>/cancel','cancel')" class="btn btn-danger btn-sm">Cancel</a>
                    <% } else if (order.status === 'Processing') { %>
                      <a href="#" onclick="confirmAction('/staff/orders/<%= order._id %>/complete','complete')" class="btn btn-primary btn-sm">Complete</a>
                    <% } else { %>
                      <span class="text-muted">No actions</span>
                    <% } %>
                  </td>
                </tr>

                <% if ((order.paymentMode === 'Pickup' || order.paymentMode === 'GCash') && order.proofImage) { %>
                  <div class="modal fade" id="proofModal-<%= order._id %>" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered modal-lg">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title">Payment Proof - Order <%= order._id %></h5>
                          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body text-center">
                          <img src="<%= order.proofImage.startsWith('/uploads') ? order.proofImage : '/uploads/proofs/' + order.proofImage %>" class="img-fluid rounded shadow mb-3" style="max-height:400px;object-fit:contain;">
                          <p class="mb-1"><strong>Sender:</strong> <%= order.senderName || 'N/A' %></p>
                          <p><strong>Reference #:</strong> <%= order.referenceNumber || 'N/A' %></p>
                          <p><strong>Note to Cashier:</strong> <%= order.noteToCashier || 'None' %></p>
                        </div>
                      </div>
                    </div>
                  </div>
                <% } %>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="9" class="text-center text-muted">No pending or processing orders</td>
              </tr>
            <% } %>
          </tbody>
        </table>

        <% if (typeof totalPagesPending !== 'undefined' && totalPagesPending > 1) { %>
          <nav class="mt-3">
            <ul class="pagination justify-content-center">
              <% for(let i = 1; i <= totalPagesPending; i++) { %>
                <li class="page-item <%= currentPendingPage === i ? 'active' : '' %>">
                  <a class="page-link" href="?pendingPage=<%= i %>&completedPage=<%= currentCompletedPage %>"><%= i %></a>
                </li>
              <% } %>
            </ul>
          </nav>
        <% } %>

      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
function confirmAction(url, action) {
  let actionLabel = action.charAt(0).toUpperCase() + action.slice(1);
  let icon = action === 'cancel' ? 'error' : (action === 'complete' ? 'success' : 'info');

  Swal.fire({
    title: `<strong>${actionLabel} Order?</strong>`,
    html: `<p class="mb-2">You're about to <b>${action}</b> this order.</p>
           <p class="text-muted">This action cannot be undone.</p>`,
    icon: icon,
    showCancelButton: true,
    focusConfirm: false,
    confirmButtonText: `Yes, ${action}`,
    cancelButtonText: 'Cancel',
    reverseButtons: true,
    buttonsStyling: false,
    customClass: { confirmButton: 'btn btn-sm', cancelButton: 'btn btn-sm' },
    didOpen: () => {
      const confirmBtn = Swal.getConfirmButton();
      const cancelBtn = Swal.getCancelButton();
      confirmBtn.classList.add(action === 'complete' ? 'btn-primary' : 'btn-success');
      cancelBtn.classList.add('btn-danger');
      cancelBtn.style.marginRight = '10px';
    }
  }).then((result) => { if (result.isConfirmed) window.location.href = url; });
}
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
